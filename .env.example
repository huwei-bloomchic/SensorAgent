# ================================
# LiteLLM 配置
# ================================
# 支持的模型（选择一个）:
#
# OpenAI (推荐):
#   LITELLM_MODEL=gpt-4
#   LITELLM_MODEL=gpt-3.5-turbo
#   LITELLM_API_KEY=sk-...
#
# Anthropic Claude:
#   LITELLM_MODEL=claude-3-sonnet-20240229
#   LITELLM_MODEL=claude-3-5-sonnet-20241022
#   LITELLM_API_KEY=sk-ant-...
#
# 阿里云 Qwen:
#   LITELLM_MODEL=qwen-max
#   LITELLM_MODEL=qwen-plus
#   LITELLM_API_KEY=sk-...
#
# 智谱 GLM:
#   LITELLM_MODEL=glm-4
#   LITELLM_API_KEY=...
#
# Google Vertex AI (需要GCP认证):
#   LITELLM_MODEL=vertex_ai/gemini-pro
#   需要配置 GOOGLE_APPLICATION_CREDENTIALS

LITELLM_MODEL=gpt-4
LITELLM_API_KEY=your_api_key_here

# LiteLLM API基础URL（可选，使用代理时需要）
# LITELLM_BASE_URL=https://api.litellm.ai

# LLM参数配置
LITELLM_TEMPERATURE=0.1
LITELLM_MAX_TOKENS=4096

# ================================
# 异常检测配置
# ================================
# 是否启用异常检测
ANOMALY_DETECTION_ENABLED=true

# 异常检测敏感度: low, medium, high
ANOMALY_SENSITIVITY=medium

# Z-Score阈值（默认3.0）
ANOMALY_ZSCORE_THRESHOLD=3.0

# 异常检查间隔（秒）
ANOMALY_CHECK_INTERVAL=3600

# ================================
# 日志配置
# ================================
# 日志级别: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# 日志文件路径
LOG_FILE=logs/sensors_agent.log

# 是否输出到控制台
LOG_TO_CONSOLE=true

# ================================
# 缓存配置
# ================================
# 是否启用查询结果缓存
CACHE_ENABLED=true

# 缓存过期时间（秒）
CACHE_TTL=300

# ================================
# 其他配置
# ================================
# API请求超时时间（秒）
REQUEST_TIMEOUT=30

# 最大重试次数
MAX_RETRIES=3

# 速率限制（每分钟最大请求数）
RATE_LIMIT=60
